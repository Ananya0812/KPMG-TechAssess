{
  "Description": "Create an EC2 instance by AWS CloudFormation",
  "Resources": {
    "EC2InstanceDemo": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "AvailabilityZone": "ap-southeast-2",
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "DeleteOnTermination": "true",
              "VolumeSize": "8",
              "VolumeType": "gp2"
            }
          }
        ],
        "ImageId": "ami-0b21dcff37a8cd8a4",
        "InstanceType": "t2.micro",
        "KeyName": "Melbkeypair1",
        "NetworkInterfaces": [
          {
            "Description": "Main network interface",
            "DeviceIndex": "0",
            "SubnetId": "subnet-e38dd0bb",
            "PrivateIpAddress": "172.31.16.4",
            "GroupSet": [
              {
                "Ref": "SecurityGroupDemo"
              }
            ]
          }
        ]
      }
    },
    "SecurityGroupDemo": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "SecurityGroupDemo",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": 22,
            "ToPort": 22,
            "CidrIp": "0.0.0.0/0",
            "Description": "For traffic from Internet"
          }
        ],
        "GroupDescription": "Security Group for demo server",
        "VpcId": "vpc-afdf25c9"
      }
    }
  }
}